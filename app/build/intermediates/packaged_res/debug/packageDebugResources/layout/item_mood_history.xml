<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/mood_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š"
            android:textSize="24sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mood_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feeling great today!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900" />

            <TextView
                android:id="@+id/mood_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Had a productive morning and enjoyed my coffee. Looking forward to the evening walk."
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/mood_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today, 2:30 PM"
                android:textSize="12sp"
                android:textColor="@color/gray_500"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mood_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more"
            android:tint="@color/gray_400"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>